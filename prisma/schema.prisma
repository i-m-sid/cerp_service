generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String
  lastName  String
  password  String
  picture   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  memberships OrganizationMembership[]
}

model Organization {
  id                   String   @id @default(cuid())
  orgName              String   
  gstNumber            String?        
  legalName            String
  tradeName            String?
  phoneNumber          String?
  email                String?
  address              Json?
  config               Json?
  createdAt   DateTime @default(now())

  members     OrganizationMembership[]
  challanTemplates   ChallanTemplate[]
  parties   Party[]
  partyTypes PartyType[]
  itemCategories ItemCategory[]
  items         Item[]
  invoices      Invoice[]
  vehicles      Vehicle[]
  uoms UnitOfMeasurement[]
  challanStatuses ChallanStatus[]
  challans Challan[]
  ledgerAccounts LedgerAccount[]
  ledgerAccountCategories LedgerAccountCategory[]
  journals Journal[]
  bankStatements BankStatement[]
}

model OrganizationMembership {
  id             String        @id @default(cuid())
  userId         String
  orgId          String
  role           UserRole

  user           User          @relation(fields: [userId], references: [id])
  organization   Organization  @relation(fields: [orgId], references: [id])
}


model Party {
  id                   String         @id @default(cuid())
  orgId                String
  gstNumber            String?        
  legalName            String
  tradeName            String?
  phoneNumber          String?
  email                String?
  openingBalance       Decimal        @default(0)
  address              Json?
  placeOfSupply        Json?
  customFields         Json?
  vehicles             Vehicle[]
  invoices             Invoice[]
  ledgerAccounts       LedgerAccount[]
  allowedPartyTypes    PartyType[] @relation("PartyPartyType")
  organization   Organization  @relation(fields: [orgId], references: [id])

  @@unique([orgId, gstNumber])
  @@index([orgId])
}

model PartyType {
  id        String            @id @default(cuid())
  label     String            
  orgId     String
  templates ChallanTemplate[] @relation("ChallanTemplatePartyType")
  parties   Party[]        @relation("PartyPartyType")
  organization   Organization  @relation(fields: [orgId], references: [id])

  @@unique([orgId, label])  
}

model ChallanTemplate {
  id                    String                 @id @default(cuid())
  name                  String
  description           String?
  orgId                 String
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  challans              Challan[]
  fieldSchema           ChallanTemplateField[]
  invoices              Invoice[]
  transactionType       TransactionType
  allowedStatuses       ChallanStatus[]        @relation("ChallanTemplateChallanStatus")
  allowedPartyTypes     PartyType[]            @relation("ChallanTemplatePartyType")
  allowedItemCategories ItemCategory[]         @relation("ChallanTemplateItemCategory")
  organization          Organization           @relation(fields: [orgId], references: [id])

  @@index([orgId])
}

model ChallanTemplateField {
  id         String          @id @default(cuid())
  templateId String
  label      String
  type       FieldType
  isRequired Boolean         @default(false)
  refModel   String?
  refKey     String?
  refId      String?
  invoiceField String?
  dependsOn  String[]
  accessLevel UserRole   @default(OWNER) 
  flex       Int?
  row        Int?
  column     Int?
  data       String[]
  isVisible  Boolean          @default(true)
  formula    String?
  template   ChallanTemplate @relation(fields: [templateId], references: [id])
}

model ItemCategory {
  id           String              @id @default(cuid())
  name         String
  isService    Boolean             @default(false)
  description  String?
  hsnCode      String?
  gstRate      Decimal            @default(0)
  cessAdValoremRate Decimal?      @default(0)
  cessSpecificRate Decimal?      @default(0)
  stateCessAdValoremRate Decimal? @default(0)
  stateCessSpecificRate Decimal? @default(0)
  orgId        String
  items        Item[]
  allowedUnits UnitOfMeasurement[] @relation("ItemCategoryUnitOfMeasurement")
  templates    ChallanTemplate[]   @relation("ChallanTemplateItemCategory")
  organization   Organization  @relation(fields: [orgId], references: [id])
}

model Item {
  id          String       @id @default(cuid())
  name        String
  description String?
  categoryId  String
  orgId        String
  uomConversionOverrides Json?       // Store UOM overrides as JSON
  category    ItemCategory @relation(fields: [categoryId], references: [id])
  organization   Organization  @relation(fields: [orgId], references: [id])

  @@index([orgId])
}

model Challan {
  id            String          @id @default(cuid())
  challanNumber String          
  date          DateTime        @default(now())
  templateId    String
  statusId      String?
  invoiceId     String?
  orgId         String
  customFields  Json
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  status        ChallanStatus?   @relation(fields: [statusId], references: [id])
  template      ChallanTemplate @relation(fields: [templateId], references: [id])
  invoice       Invoice?        @relation(fields: [invoiceId], references: [id])
  organization  Organization    @relation(fields: [orgId], references: [id])

  @@index([orgId])
}

model ChallanStatus {
  id         String          @id @default(cuid())
  orgId      String
  label      String
  color      String?
  challans   Challan[]
  templates  ChallanTemplate[] @relation("ChallanTemplateChallanStatus")
  organization   Organization  @relation(fields: [orgId], references: [id])
}

model UnitOfMeasurement {
  id         String         @id @default(cuid())
  label      String
  shortCode  String
  orgId      String
  baseConversionFactor Decimal
  baseUQC              String 
  categories ItemCategory[] @relation("ItemCategoryUnitOfMeasurement")
  organization   Organization  @relation(fields: [orgId], references: [id])
}

model Vehicle {
  id                         String    @id @default(cuid())
  vehicleNumber              String
  type                       String
  registeredAt               DateTime?
  isActive                   Boolean   @default(true)
  ownerId                    String?
  lastFuelOdometerReading    Decimal?
  lastServiceOdometerReading Decimal?
  lastServiceDate            DateTime?
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt
  orgId                      String
  owner                      Party? @relation(fields: [ownerId], references: [id])
  organization               Organization  @relation(fields: [orgId], references: [id])

  @@unique([orgId, vehicleNumber])
  @@index([orgId])
}

model Invoice {
  id                         String    @id @default(cuid())
  challanTemplateId          String    
  invoiceNumber              String
  date                       DateTime
  partyId                    String
  poNumber                   String?
  orgDetails                 Json
  partyDetails               Json
  invoiceType                InvoiceType
  transactionType            TransactionType
  includeTax                 Boolean  @default(true)
  roundOff                   Boolean  @default(true)
  lineItems                  Json
  subTotal                   Decimal? @default(0)
  cgstAmount                 Decimal? @default(0)
  sgstAmount                 Decimal? @default(0)
  igstAmount                 Decimal? @default(0)
  cessAmount                 Decimal? @default(0)
  stateCessAmount            Decimal? @default(0)
  discountAmount             Decimal? @default(0)
  roundOffAmount             Decimal? @default(0)
  totalAmount                Decimal? @default(0)
  notes                      String?
  termsAndConditions         String?
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt
  orgId                      String
  challans                   Challan[]
  party                      Party? @relation(fields: [partyId], references: [id])
  organization               Organization  @relation(fields: [orgId], references: [id])
  challanTemplate            ChallanTemplate @relation(fields: [challanTemplateId], references: [id])
}
model LedgerAccountCategory {
  id            String           @id @default(cuid())
  name          String
  code          String?
  isDefault     Boolean          @default(false)
  accountType   LedgerAccountType
  description   String?
  orgId         String
  organization  Organization     @relation(fields: [orgId], references: [id])
  accounts      LedgerAccount[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  
  @@unique([orgId, code])
  @@unique([orgId, name])
  @@index([orgId])
}

model LedgerAccount {
  id            String               @id @default(cuid())
  name          String
  code          String?
  description   String?
  isSystemGenerated      Boolean              @default(false)
  isActive      Boolean              @default(true)
  categoryId    String
  isBank        Boolean              @default(false)
  bankMeta   Json?
  orgId         String
  openingBalance Decimal             @default(0)
  currentBalance Decimal             @default(0)
  category      LedgerAccountCategory @relation(fields: [categoryId], references: [id])
  organization  Organization         @relation(fields: [orgId], references: [id])
  partyId       String?              // Optional link to a party
  party         Party?               @relation(fields: [partyId], references: [id])
  lines         JournalLine[]
  bankStatements BankStatement[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@unique([orgId, code])
  @@index([orgId])
}

model Journal {
  id            String           @id @default(cuid())
  voucherNumber     String
  description     String?
  date          DateTime
  status        JournalStatus
  voucherType   VoucherType
  orgId         String
  createdBy     String?
  sourceType    SourceType?
  sourceId      String?
  lines         JournalLine[]
  organization  Organization     @relation(fields: [orgId], references: [id])
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  
  @@index([orgId])
  BankStatementEntry BankStatementEntry[]
}

model JournalLine {
  id            String         @id @default(cuid())
  journalId     String
  accountId     String
  description   String?
  debitAmount   Decimal        @default(0)
  creditAmount  Decimal        @default(0)
  journal       Journal  @relation(fields: [journalId], references: [id])
  account       LedgerAccount  @relation(fields: [accountId], references: [id])
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  
  // @@index([journalId])
  // @@index([accountId])
}

model BankStatement {
  id              String            @id @default(cuid())
  accountId       String            // References a LedgerAccount
  account         LedgerAccount     @relation(fields: [accountId], references: [id])
  startDate       DateTime
  endDate         DateTime
  openingBalance    Decimal
  closingBalance      Decimal
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  orgId           String
  organization    Organization      @relation(fields: [orgId], references: [id])
  entries         BankStatementEntry[]
  

  @@index([orgId])
}

model BankStatementEntry {
  id              String    @id @default(cuid())
  statementId     String
  statement       BankStatement @relation(fields: [statementId], references: [id])
  transactionDate DateTime
  description     String
  referenceNumber     String?
  amount          Decimal
  closingBalance  Decimal
  isReconciled    Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  journalId  String?   // Optional reference to LedgerJournal
  journal    Journal? @relation(fields: [journalId], references: [id])
  
  // @@index([statementId])
  // @@index([journalId])
}

enum FieldType {
  TEXT
  NUMBER
  DECIMAL
  BOOLEAN
  DATE
  SINGLE_SELECT
  MULTI_SELECT
}

enum TransactionType {
  SALES
  PURCHASE
}

enum InvoiceType {
  INVOICE
  PRO_FORMA
  QUOTE
  ORDER
}

enum UserRole {
  OWNER           // Full control â€” usually the organization creator
  ADMIN           // Manages users, settings, and all data
  MANAGER         // Handles operational aspects like approving entries
  ACCOUNTANT      // Manages invoices, ledgers, and finances
  DATA_ENTRY      // Can create and edit records but limited permissions
  VIEWER          // Read-only access 
}

enum LedgerAccountType {
  ASSET
  LIABILITY
  EQUITY
  REVENUE
  EXPENSE
}

enum VoucherType {
  PAYMENT
  RECEIPT
  CONTRA
  PURCHASE
  SALES
  DEBIT_NOTE
  CREDIT_NOTE
  JOURNAL
}

enum JournalStatus {
  DRAFT
  POSTED
  CANCELLED
}

enum SourceType {
  INVOICE
  PRO_FORMA
  CHALLAN
}


